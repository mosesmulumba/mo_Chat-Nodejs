doctype html 
html
    head
        title= "Web Chat"
        script(src='/chat.js')
        script(src='/socket.io/socket.io.js')
    body
        #content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999;  border-radius: 0.2rem; font-size: 18px; padding: 8px; font-family: sans-serif; border-bottom: 1px solid #ccc; overflow-y: scroll;')
        .controls
            | Name: 
            input#name(style='width:350px; height: 35px; border: 1px solid #000; border-radius: 0.2rem; font-size: 19px; margin: 1rem 1rem 1rem 2rem;')
            br
            | Message :
            input#field(style='width:350px; height: 35px; border: 1px solid #000; border-radius: 0.2rem; font-size: 19px; margin: 1rem;')
            br
            input#send(style='width: 100px; height: 50px;  border-radius: 0.5rem; border : 1px solid #fff; color: #fff; background-color: #50cd89; font-size: 24px; font-weight: bolder; margin-left: 12rem;' ,
                         type='button', value='send')